<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@drawable/yellow_bg">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="100dp"
            android:background="@drawable/button"
            android:layout_height="50dp"
            android:text="Filter Courses"
            android:id="@+id/button3"
            android:textColor="@color/yellow"
            android:layout_gravity="right"
            android:layout_below="@android:id/tabs"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_alignRight="@android:id/tabcontent"
            android:layout_alignEnd="@android:id/tabcontent"             />
        <TextView
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#FFD700"
            android:textSize="30sp"
            android:textIsSelectable="false" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=" Search Courses"
            android:id="@+id/button2"
            android:textColor="@color/yellow"
            android:background="@drawable/button"
            android:layout_gravity="right"
            android:layout_below="@android:id/tabs"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/textView"
            android:layout_alignRight="@android:id/tabcontent"
            android:layout_alignEnd="@android:id/tabcontent"

            />


        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/textView"
            android:layout_gravity="left|top"
            android:layout_alignTop="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/yellow"
            android:hint="  Search Courses"
            android:layout_above="@android:id/tabcontent" />

    </RelativeLayout>
    <ProgressBar
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:gravity="left|center_vertical"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true" />
    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

</LinearLayout>
    </ScrollView>